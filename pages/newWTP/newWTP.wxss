/* pages/newWTP/newWTP.wxss */
.container{
    padding: 64rpx 32rpx 32rpx 32rpx;
    display: flex;
    flex-direction: column;
    gap: 60rpx;
}

.wtp_main{
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 32rpx;
}
.wtp_main image{
    width: 206rpx;
    height: 206rpx;
    border-radius: 20%;
}
.wtp_main text{
    font-family: 'Source Han Sans CN-Medium';
    font-size: 48rpx;
    color: #262626;
}

.list_container{
    display: flex;
    flex-direction: column;
}
.list_item{
    height: 112rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.list_item text:first-child{
    font-size: 32rpx;
    color: #000;
}
picker {
    flex-grow: 1;
    text-align: right;
}

.dialogContent{
    padding: 64rpx 32rpx 0 32rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 16rpx;
}
.wtp_item{
    display: flex;
    flex-direction: column;
    flex: none;
}
.wtp_item > image{
    width: 155.5rpx;
    height: 155.5rpx;
    border-radius: 20%;
}
.wtp_item > text{
    text-align: center;
    font-family: 'Source Han Sans CN';
    font-size: 32rpx;
    color: #262626;
}