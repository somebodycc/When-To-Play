/* components/wtp/wtp.wxss */
.reservation_item{
    width: 686rpx;
    height: 780rpx;
    /* margin: 200rpx 32rpx; */
    padding: 8rpx;
    box-sizing: border-box;
    border: solid 1rpx #fff;
    border-radius: 20rpx;
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(100px);
    display: flex;
    flex-direction: column;
    gap: 8rpx;
}
    .reservation_head{
        display: flex;
        align-items: center;
        gap: 8rpx;
    }
    .reservation_head text:first-child{
        line-height: 50%;
        color: blueviolet;
    }
    .reservation_head image{
        width: 64rpx;
        height: 64rpx;
        border-radius: 50%;
    }
    .reservation_head text:last-of-type{
        font-size: 28rpx;
        line-height: 50%;
        color: #262626;
    }
    .reservation_head view:last-child{
        margin-left: auto;
        font-size: 32rpx;
        color: #262626;
    }

    .reservation_main{
        margin-top: 100rpx;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 32rpx;
    }
    .reservation_main text:first-child{
        font-size: 40rpx;
        color: #262626;
    }
    .reservation_main image{
        width: 206rpx;
        height: 206rpx;
        border-radius: 20%;
    }
    .reservation_main text:last-child{
        font-family: 'Source Han Sans CN-Medium';
        font-size: 48rpx;
        color: #262626;
    }

    .reservation_tail{
        margin-top: auto;
        display: flex;
        flex-direction: column;
        gap: 16rpx;
    }
    .reservation_tail > text{
        text-align: end;
        font-size: 28rpx;
        color: #262626;
    }
    .reservation_status{
        display: flex;
        align-items: center;
        padding-top: 10rpx;
        border-top: solid 1rpx #fff;
    }
    .reservation_status > text{
        flex: 1;
        text-align: center;
        font-size: 40rpx;
    }
    .reservation_pending{
        justify-content: space-around;
        gap: 16rpx;
    }

@keyframes show-more{
    from{
        scale: 0;
    }
    to{
        scale: 1;
    }
}